{
  "name": "vscode-puppet",
  "displayName": "Puppet",
  "description": "Puppet VSCode extension",
  "version": "0.0.1",
  "publisher": "puppet",
  "license": "Apache 2.0",
  "repository":{
    "type": "git",
    "url": "https://github.com/jpogran/vscode-puppet"
  },
  "bugs":{
    "type": "git",
    "url": "https://github.com/jpogran/vscode-puppet/issues"
  },
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Linters",
    "Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:extension.puppetLint"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [{
      "id": "puppet",
      "aliases": ["Puppet", "puppet"],
      "extensions": [".pp", ".epp"],
      "configuration": "./puppet.configuration.json"
    }],
    "grammars": [{
      "language": "puppet",
      "scopeName": "source.puppet",
      "path": "./syntaxes/puppet.tmLanguage"
    }],
    "snippets": [{
      "language": "puppet",
      "path": "./snippets/snippets.json"
    }],
    "commands": [{
      "command": "extension.puppetLint",
      "title": "Puppet Lint"
    }]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  }
}