{
  "name": "puppet-vscode",
  "displayName": "Puppet",
  "description": "Puppet VSCode extension",
  "version": "0.0.4",
  "publisher": "puppet",
  "license": "Apache 2.0",
  "icon":"images/Puppet-Logo-Amber-sm.png",
  "repository":{
    "type": "git",
    "url": "https://github.com/jpogran/puppet-vscode"
  },
  "bugs":{
    "type": "git",
    "url": "https://github.com/jpogran/puppet-vscode/issues"
  },
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Linters",
    "Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:puppet",
    "onCommand:extension.puppetLint",
    "onCommand:extension.puppetParserValidate",
    "onCommand:extension.puppetShowNodeGraphToSide",
    "onCommand:extension.puppetResource",
    "onCommand:extension.puppetModule"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [{
      "id": "puppet",
      "aliases": ["Puppet", "puppet"],
      "extensions": [".pp", ".epp"],
      "configuration": "./languages/puppet.configuration.json"
    }],
    "grammars": [{
      "language": "puppet",
      "scopeName": "source.puppet",
      "path": "./syntaxes/puppet.tmLanguage"
    }],
    "snippets": [
      {
        "language": "puppet",
        "path": "./snippets/keywords.snippets.json"
      }
    ],
    "commands": [
      {
        "command": "extension.puppetResource",
        "category": "Puppet",
        "title": "Resource",
        "when": "editorTextFocus && editorLangId == 'puppet'"
      },{
        "command": "extension.puppetModule",
        "title": "Puppet Module",
        "when": "editorTextFocus && editorLangId == 'puppet'"
      },
      {
        "command": "extension.puppetShowNodeGraphToSide",
        "title": "Open Node Graph to the Side",
        "category": "Puppet",
        "icon": {
          "light": "./media/PreviewOnRightPane_16x.svg",
          "dark": "./media/PreviewOnRightPane_16x_dark.svg"
        }
      }
    ],
    "configurationDefaults": {
      "files.encoding": "utf8",
      "files.associations":[
        ".pp", ".epp"
      ],
      "[puppet]":{
        "editor.tabSize": 2,
        "editor.insertSpaces":true,
        "files.insertFinalNewline": true
      }
    },
    "configuration": {
      "type": "object",
      "title": "puppet",
      "properties": {
        "puppet.languageserver.address": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "The address of the VSCode languge sever to connect to"
        },
        "puppet.languageserver.port": {
          "type": "integer",
          "default": 8081,
          "description": "The port of the VSCode languge sever to connect to"
        },
        "puppet.languageserver.stopOnClientExit": {
          "type":"boolean",
          "default": true,
          "description": "Stop the VSCode languge sever when the client disconnects"
        },
        "puppet.languageserver.timeout": {
          "type": "integer",
          "default": 10,
          "description": "The timeout to connect to the VSCode languge sever"
        },
        "puppet.languageserver.preLoadPuppet": {
          "type":"boolean",
          "default": true,
          "description": "Initalize puppet on VSCode languge start"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "vscode-languageclient": "^3.1.0",
    "vsce": "^1.18.0",
    "mocha": "^2.3.3",
    "gulp": "^3.9.1",
    "del": "^2.2.2",
    "run-sequence":"^1.2.2",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "vscode": "^1.0.0",
    "vscode-languageclient": "^3.1.0",
    "vscode-languageserver": "^3.1.0"
  }
}
