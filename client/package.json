{
  "name": "puppet-vscode",
  "displayName": "Puppet",
  "description": "Puppet VSCode extension",
  "version": "0.0.3",
  "publisher": "puppet",
  "license": "Apache 2.0",
  "repository":{
    "type": "git",
    "url": "https://github.com/jpogran/puppet-vscode"
  },
  "bugs":{
    "type": "git",
    "url": "https://github.com/jpogran/puppet-vscode/issues"
  },
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Linters",
    "Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:puppet",
    "onCommand:extension.puppetLint",
    "onCommand:extension.puppetParserValidate",
    "onCommand:extension.puppetResource",
    "onCommand:extension.puppetModule"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [{
      "id": "puppet",
      "aliases": ["Puppet", "puppet"],
      "extensions": [".pp", ".epp"],
      "configuration": "./puppet.configuration.json"
    }],
    "grammars": [{
      "language": "puppet",
      "scopeName": "source.puppet",
      "path": "./syntaxes/puppet.tmLanguage"
    }],
    "snippets": [
      {
        "language": "puppet",
        "path": "./snippets/dsl.snippets.json"
      },
      {
        "language": "puppet",
        "path": "./snippets/module.snippets.json"
      }
    ],
    "commands": [
      {
        "command": "extension.puppetLint",
        "title": "Puppet Lint",
        "when": "editorTextFocus && editorLangId == 'puppet'"
      },{
        "command": "extension.puppetParserValidate",
        "title": "Puppet Parser",
        "when": "editorTextFocus && editorLangId == 'puppet'"
      },{
        "command": "extension.puppetResource",
        "title": "Puppet Resource",
        "when": "editorTextFocus && editorLangId == 'puppet'"
      },{
        "command": "extension.puppetModule",
        "title": "Puppet Module",
        "when": "editorTextFocus && editorLangId == 'puppet'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  }
}